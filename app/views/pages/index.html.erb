<p id="notice"><%= notice %></p>

<h2>Menu label links</h2>
<div class="visible" id="portfolio">
  <table>
    <thead>
      <tr>
        <th>Menu label links:</th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= link_to page.menu_label, page %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= button_to 'New Page', new_page_path, :method => "get" %>
  <br>
</div>

<div class="hidden" id="results">
</div>

<button id="RenderPortfolio_Btn">View Pages</button>
<button id="RenderResults_Btn">Hide Pages</button>
