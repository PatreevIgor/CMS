<p id="notice"><%= notice %></p>

<h2>Menu label links</h2>
<div class="visible" id="all_pages">
  <table>
    <thead>
      <tr>
        <th>Menu label links:</th>
      </tr>
    </thead>

    <tbody>
      <% @published_pages.each do |page| %>
        <tr>
          <td><%= link_to page.menu_label, page %></td>
        </tr>
      <% end %>

      <% @unpublished_pages.each do |page| %>
        <tr>
          <td><%= link_to page.menu_label, page %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
  <%= button_to 'New Page', new_page_path, :method => "get" %>
  <br>
  <button id="Hid_unpublished_Pages">Hide unpublished Pages</button>
</div>

<div class="hidden" id="only_published">
  <table>
    <thead>
      <tr>
        <th>Menu label links:</th>
      </tr>
    </thead>

    <tbody>
      <% @published_pages.each do |page| %>
        <tr>
          <td><%= link_to page.menu_label, page %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= button_to 'New Page', new_page_path, :method => "get" %>
  <br>
  <button id="View_unpublished_Pages">View unpublished Pages</button>
</div>
